{"ast":null,"code":"import { mapGetters, mapActions } from 'vuex';\nexport default {\n  name: 'AppHeader',\n  data() {\n    return {\n      isScrolled: false\n    };\n  },\n  computed: {\n    ...mapGetters(['isAuthenticated'])\n  },\n  methods: {\n    ...mapActions(['logout']),\n    // Logout and close menu function\n    logoutUser() {\n      this.logout().then(() => {\n        this.$router.push('/login');\n      });\n    },\n    logoutAndCloseMenu() {\n      this.toggleMenu(); // Close the menu first\n      this.logoutUser(); // Then handle the logout\n    },\n    // Toggle mobile menu\n    toggleMenu() {\n      this.menuOpen = !this.menuOpen;\n      if (this.menuOpen) {\n        document.body.style.overflow = 'hidden'; // Prevent background scroll\n      } else {\n        document.body.style.overflow = 'auto'; // Restore background scroll\n      }\n    },\n    // Handle scroll event for header\n    handleScroll() {\n      this.isScrolled = window.scrollY > 50;\n    },\n    // Debounce for performance improvement on scroll\n    debounce(fn, delay) {\n      let timer = null;\n      return function (...args) {\n        clearTimeout(timer);\n        timer = setTimeout(() => fn.apply(this, args), delay);\n      };\n    }\n  },\n  mounted() {\n    this.handleScroll = this.debounce(this.handleScroll, 50); // Debounced scroll handling\n    window.addEventListener('scroll', this.handleScroll);\n  },\n  beforeUnmount() {\n    window.removeEventListener('scroll', this.handleScroll);\n  }\n};","map":{"version":3,"names":["mapGetters","mapActions","name","data","isScrolled","computed","methods","logoutUser","logout","then","$router","push","logoutAndCloseMenu","toggleMenu","menuOpen","document","body","style","overflow","handleScroll","window","scrollY","debounce","fn","delay","timer","args","clearTimeout","setTimeout","apply","mounted","addEventListener","beforeUnmount","removeEventListener"],"sources":["src/components/AppHeader/AppHeader.vue"],"sourcesContent":["<template>\n  <header class=\"header\" :class=\"{ scrolled: isScrolled }\">\n    <div class=\"container\">\n      <div class=\"logo\">\n        <router-link to=\"/\">\n          <!-- Ensure the image path is correct -->\n          <img\n            src=\"@/assets/logo.png\"  <!-- Make sure this path is correct -->\n            alt=\"Dawlat Emad Logo\"\n            class=\"logo-image\"\n          />\n        </router-link>\n      </div>\n      <nav class=\"navigation\">\n        <ul>\n          <li><router-link to=\"/\">Home</router-link></li>\n          <li><router-link to=\"/about\">About</router-link></li>\n          <li v-if=\"isAuthenticated\">\n            <router-link to=\"/dashboard\">Dashboard</router-link>\n          </li>\n          <li v-if=\"isAuthenticated\">\n            <router-link to=\"/profile\">Profile</router-link>\n          </li>\n          <li v-if=\"!isAuthenticated\">\n            <router-link to=\"/login\">Login</router-link>\n          </li>\n          <li v-if=\"isAuthenticated\">\n            <router-link to=\"/create-post\">Create Post</router-link>\n          </li>\n          <li v-if=\"isAuthenticated\">\n            <a href=\"#\" @click.prevent=\"logoutAndCloseMenu\">Logout</a>\n          </li>\n        </ul>\n      </nav>\n      <div class=\"menu-toggle\" @click=\"toggleMenu\">\n        <span></span>\n        <span></span>\n        <span></span>\n      </div>\n    </div>\n    <!-- Mobile Navigation Overlay -->\n    <transition name=\"slide-down\">\n      <nav class=\"mobile-navigation\" v-if=\"menuOpen\">\n        <ul>\n          <li>\n            <router-link to=\"/\" @click=\"toggleMenu\">Home</router-link>\n          </li>\n          <li>\n            <router-link to=\"/about\" @click=\"toggleMenu\">About</router-link>\n          </li>\n          <li v-if=\"isAuthenticated\">\n            <router-link to=\"/dashboard\" @click=\"toggleMenu\"\n              >Dashboard</router-link\n            >\n          </li>\n          <li v-if=\"isAuthenticated\">\n            <router-link to=\"/profile\" @click=\"toggleMenu\">Profile</router-link>\n          </li>\n          <li v-if=\"!isAuthenticated\">\n            <router-link to=\"/login\" @click=\"toggleMenu\">Login</router-link>\n          </li>\n          <li v-if=\"isAuthenticated\">\n            <router-link to=\"/create-post\" @click=\"toggleMenu\"\n              >Create Post</router-link\n            >\n          </li>\n          <li v-if=\"isAuthenticated\">\n            <a href=\"#\" @click.prevent=\"logoutAndCloseMenu\">Logout</a>\n          </li>\n        </ul>\n      </nav>\n    </transition>\n  </header>\n</template>\n\n<script>\nimport { mapGetters, mapActions } from 'vuex';\n\nexport default {\n  name: 'AppHeader',\n  data() {\n    return {\n    \n      isScrolled: false,\n    };\n  },\n  computed: {\n    ...mapGetters(['isAuthenticated']),\n  },\n  methods: {\n    ...mapActions(['logout']),\n    \n    // Logout and close menu function\n    logoutUser() {\n      this.logout().then(() => {\n        this.$router.push('/login');\n      });\n    },\n    logoutAndCloseMenu() {\n      this.toggleMenu(); // Close the menu first\n      this.logoutUser(); // Then handle the logout\n    },\n    \n    // Toggle mobile menu\n    toggleMenu() {\n      this.menuOpen = !this.menuOpen;\n      if (this.menuOpen) {\n        document.body.style.overflow = 'hidden'; // Prevent background scroll\n      } else {\n        document.body.style.overflow = 'auto'; // Restore background scroll\n      }\n    },\n    \n    // Handle scroll event for header\n    handleScroll() {\n      this.isScrolled = window.scrollY > 50;\n    },\n    \n    // Debounce for performance improvement on scroll\n    debounce(fn, delay) {\n      let timer = null;\n      return function (...args) {\n        clearTimeout(timer);\n        timer = setTimeout(() => fn.apply(this, args), delay);\n      };\n    },\n  },\n  mounted() {\n    this.handleScroll = this.debounce(this.handleScroll, 50); // Debounced scroll handling\n    window.addEventListener('scroll', this.handleScroll);\n  },\n  beforeUnmount() {\n    window.removeEventListener('scroll', this.handleScroll);\n  },\n};\n</script>\n\n<style src=\"./AppHeader.css\"></style>\n"],"mappings":"AA4EA,SAAAA,UAAA,EAAAC,UAAA;AAEA;EACAC,IAAA;EACAC,KAAA;IACA;MAEAC,UAAA;IACA;EACA;EACAC,QAAA;IACA,GAAAL,UAAA;EACA;EACAM,OAAA;IACA,GAAAL,UAAA;IAEA;IACAM,WAAA;MACA,KAAAC,MAAA,GAAAC,IAAA;QACA,KAAAC,OAAA,CAAAC,IAAA;MACA;IACA;IACAC,mBAAA;MACA,KAAAC,UAAA;MACA,KAAAN,UAAA;IACA;IAEA;IACAM,WAAA;MACA,KAAAC,QAAA,SAAAA,QAAA;MACA,SAAAA,QAAA;QACAC,QAAA,CAAAC,IAAA,CAAAC,KAAA,CAAAC,QAAA;MACA;QACAH,QAAA,CAAAC,IAAA,CAAAC,KAAA,CAAAC,QAAA;MACA;IACA;IAEA;IACAC,aAAA;MACA,KAAAf,UAAA,GAAAgB,MAAA,CAAAC,OAAA;IACA;IAEA;IACAC,SAAAC,EAAA,EAAAC,KAAA;MACA,IAAAC,KAAA;MACA,oBAAAC,IAAA;QACAC,YAAA,CAAAF,KAAA;QACAA,KAAA,GAAAG,UAAA,OAAAL,EAAA,CAAAM,KAAA,OAAAH,IAAA,GAAAF,KAAA;MACA;IACA;EACA;EACAM,QAAA;IACA,KAAAX,YAAA,QAAAG,QAAA,MAAAH,YAAA;IACAC,MAAA,CAAAW,gBAAA,gBAAAZ,YAAA;EACA;EACAa,cAAA;IACAZ,MAAA,CAAAa,mBAAA,gBAAAd,YAAA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}