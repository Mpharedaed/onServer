n}\r\n\r\n.logo h1 {\r\n  font-family: 'Roboto', sans-serif;\r\n  font-weight: 700;\r\n  margin: 0;\r\n  font-size: 24px;\r\n  animation: fadeInDown 1s ease;\r\n}\r\n\r\n.navigation ul {\r\n  list-style: none;\r\n  display: flex;\r\n  gap: 20px;\r\n  margin: 0;\r\n  padding: 0;\r\n  font-family: 'Roboto', sans-serif;\r\n  font-weight: 500;\r\n}\r\n\r\n.navigation a {\r\n  color: white;\r\n  text-decoration: none;\r\n  position: relative;\r\n  transition: color 0.3s ease;\r\n}\r\n\r\n.navigation a::before {\r\n  content: '';\r\n  position: absolute;\r\n  width: 0;\r\n  height: 2px;\r\n  bottom: -2px;\r\n  left: 0;\r\n  background-color: white;\r\n  visibility: hidden;\r\n  transition: all 0.3s ease-in-out;\r\n}\r\n\r\n.navigation a:hover::before {\r\n  visibility: visible;\r\n  width: 100%;\r\n}\r\n\r\n.navigation a:hover {\r\n  color: #e0e0e0;\r\n}\r\n\r\n@keyframes fadeInDown {\r\n  from {\r\n    opacity: 0;\r\n    transform: translateY(-20px);\r\n  }\r\n  to {\r\n    opacity: 1;\r\n    transform: translateY(0);\r\n  }\r\n}\r\n</style>\r\n"],"mappings":"AAoBA;EACAA,IAAA;EACAC,QAAA;IACAC,WAAA;MACA,SAAAC,YAAA,CAAAC,OAAA;IACA;EACA;EACAC,OAAA;IACAC,OAAA;MACAH,YAAA,CAAAI,UAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}