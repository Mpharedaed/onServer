{"ast":null,"code":"import { ref, computed, watch } from 'vue';\nimport CheckboxQuestion from './questions/CheckboxQuestion.vue';\nimport RadioQuestion from './questions/RadioQuestion.vue';\nimport InputQuestion from './questions/InputQuestion.vue';\nimport DateQuestion from './questions/DateQuestion.vue';\nexport default {\n  name: 'StoryModal',\n  components: {\n    CheckboxQuestion,\n    RadioQuestion,\n    InputQuestion,\n    DateQuestion\n  },\n  props: {\n    showModal: {\n      type: Boolean,\n      default: false\n    }\n  },\n  emits: ['close', 'submit'],\n  setup(props, {\n    emit\n  }) {\n    const showQuestionnaire = ref(false);\n    const currentStep = ref(0);\n    const answers = ref([]);\n    const specialties = [{\n      title: 'بناء الثقة',\n      description: 'بتساعد السيدات يستعيدوا قوتهم وصوتهم في الحياة الشخصية والمهنية.'\n    }, {\n      title: 'الكوتشينج المهني',\n      description: 'بترشد الأفراد في تحديد أهدافهم المهنية وتوجيه حياتهم العملية ناحية شغفهم.'\n    }, {\n      title: 'الصحة النفسية',\n      description: 'بتدعم عملاءها في إدارة التوتر والقلق وتعدي المراحل الصعبة في حياتهم بأساليب مخصصة للمرونة النفسية.'\n    }, {\n      title: 'تطوير القيادة',\n      description: 'بتمكن السيدات والقادة الجدد إنهم يمسكوا مناصب قيادية بشجاعة وثقة.'\n    }];\n    const questions = [{\n      title: 'مرحباً! لنخصص تجربتك.',\n      text: 'ما هي أهدافك الرئيسية في الحياة حالياً؟',\n      type: 'checkbox',\n      options: ['تطوير مهني', 'تحسين الصحة النفسية', 'بناء الثقة', 'تطوير القيادة', 'إدارة الوقت', 'تعلم مهارات جديدة']\n    }, {\n      title: 'رائع!',\n      text: 'ما هو أكبر تحدي تواجهه الآن؟',\n      type: 'radio',\n      options: ['قلة التركيز', 'القلق', 'نقص الحافز', 'تحديد الأهداف', 'توازن الحياة والعمل']\n    }, {\n      title: 'شكراً لمشاركتك.',\n      text: 'من فضلك أدخل بريدك الإلكتروني لنتمكن من التواصل معك.',\n      type: 'input',\n      inputType: 'email',\n      placeholder: 'ادخل بريدك الإلكتروني'\n    }, {\n      title: 'متى تفضل أن نتواصل معك؟',\n      type: 'date'\n    }];\n    const currentQuestion = computed(() => questions[currentStep.value]);\n    const isLastStep = computed(() => currentStep.value === questions.length - 1);\n    const getQuestionComponent = computed(() => {\n      switch (currentQuestion.value.type) {\n        case 'checkbox':\n          return CheckboxQuestion;\n        case 'radio':\n          return RadioQuestion;\n        case 'input':\n          return InputQuestion;\n        case 'date':\n          return DateQuestion;\n        default:\n          return null;\n      }\n    });\n    const isStepValid = computed(() => {\n      const answer = answers.value[currentStep.value];\n      if (!answer) return false;\n      if (currentQuestion.value.type === 'checkbox') return answer.length > 0;\n      if (currentQuestion.value.type === 'input' && currentQuestion.value.inputType === 'email') {\n        return /\\S+@\\S+\\.\\S+/.test(answer);\n      }\n      return true;\n    });\n    watch(currentStep, newStep => {\n      if (answers.value[newStep] === undefined) {\n        answers.value[newStep] = currentQuestion.value.type === 'checkbox' ? [] : '';\n      }\n    });\n    const closeModal = () => {\n      emit('close');\n      showQuestionnaire.value = false;\n      currentStep.value = 0;\n      answers.value = [];\n    };\n    const openQuestionnaire = () => {\n      showQuestionnaire.value = true;\n    };\n    const nextStep = () => {\n      if (currentStep.value < questions.length - 1) {\n        currentStep.value++;\n      }\n    };\n    const prevStep = () => {\n      if (currentStep.value > 0) {\n        currentStep.value--;\n      }\n    };\n    const submit = () => {\n      emit('submit', {\n        answers: answers.value,\n        email: answers.value[2]\n      });\n      closeModal();\n    };\n    return {\n      showQuestionnaire,\n      currentStep,\n      answers,\n      specialties,\n      currentQuestion,\n      isLastStep,\n      getQuestionComponent,\n      isStepValid,\n      closeModal,\n      openQuestionnaire,\n      nextStep,\n      prevStep,\n      submit\n    };\n  }\n};","map":{"version":3,"names":["ref","computed","watch","CheckboxQuestion","RadioQuestion","InputQuestion","DateQuestion","name","components","props","showModal","type","Boolean","default","emits","setup","emit","showQuestionnaire","currentStep","answers","specialties","title","description","questions","text","options","inputType","placeholder","currentQuestion","value","isLastStep","length","getQuestionComponent","isStepValid","answer","test","newStep","undefined","closeModal","openQuestionnaire","nextStep","prevStep","submit","email"],"sources":["src/components/StoryModal.vue"],"sourcesContent":["<template>\n  <div v-if=\"showModal\" class=\"modal-container\" @click.self=\"closeModal\">\n    <div :class=\"['modal-content', 'rtl', { 'questionnaire-content': showQuestionnaire, 'story-content': !showQuestionnaire }]\">\n      <button class=\"close-button\" @click=\"closeModal\" aria-label=\"Close\">&times;</button>\n      \n      <transition name=\"fade\" mode=\"out-in\">\n        <div v-if=\"!showQuestionnaire\" key=\"story\">\n          <h2 class=\"modal-title\">عن دولت عماد</h2>\n          <p class=\"modal-text\">\n            دولت عماد هي كوتش حياة شغوفة، مخصصة إنها تساعد الناس يكتشفوا إمكانياتهم الحقيقية ويحققوا أحلامهم. بأسلوب بسيط وجميل بيجمع بين التعاطف والخبرة، دولت بتمكن عملاءها من تجاوز التحديات واكتشاف قوتهم الداخلية.\n          </p>\n          <h3 class=\"modal-subheading\">تخصصات دولت تشمل:</h3>\n          <ul class=\"modal-list\">\n            <li v-for=\"(specialty, index) in specialties\" :key=\"index\">\n              <strong>{{ specialty.title }}:</strong> {{ specialty.description }}\n            </li>\n          </ul>\n          <p class=\"modal-text\">\n            دولت معروفة بأسلوبها الدافئ والداعم. بتقدم مش بس أدوات عملية، لكن كمان بتدي الدعم النفسي اللي عملاءها بيحتاجوه عشان يحققوا النجاح.\n          </p>\n          <button class=\"modal-button\" @click=\"openQuestionnaire\">ابدأ رحلتك الآن</button>\n        </div>\n\n        <div v-else key=\"questionnaire\">\n          <h2 class=\"modal-title\">{{ currentQuestion.title }}</h2>\n          <p v-if=\"currentQuestion.text\" class=\"modal-text\">{{ currentQuestion.text }}</p>\n          \n          <component :is=\"getQuestionComponent\" v-model=\"answers[currentStep]\" :question=\"currentQuestion\" />\n\n          <div class=\"navigation-buttons\">\n            <button v-if=\"currentStep > 0\" @click=\"prevStep\" class=\"nav-button prev-button\">السابق</button>\n            <button\n              v-if=\"!isLastStep\"\n              @click=\"nextStep\"\n              class=\"nav-button next-button\"\n              :disabled=\"!isStepValid\"\n            >\n              التالي\n            </button>\n            <button\n              v-else\n              @click=\"submit\"\n              class=\"nav-button submit-button\"\n              :disabled=\"!isStepValid\"\n            >\n              إرسال\n            </button>\n          </div>\n        </div>\n      </transition>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { ref, computed, watch } from 'vue';\nimport CheckboxQuestion from './questions/CheckboxQuestion.vue';\nimport RadioQuestion from './questions/RadioQuestion.vue';\nimport InputQuestion from './questions/InputQuestion.vue';\nimport DateQuestion from './questions/DateQuestion.vue';\n\nexport default {\n  name: 'StoryModal',\n  components: {\n    CheckboxQuestion,\n    RadioQuestion,\n    InputQuestion,\n    DateQuestion,\n  },\n  props: {\n    showModal: {\n      type: Boolean,\n      default: false,\n    },\n  },\n  emits: ['close', 'submit'],\n  setup(props, { emit }) {\n    const showQuestionnaire = ref(false);\n    const currentStep = ref(0);\n    const answers = ref([]);\n\n    const specialties = [\n      { title: 'بناء الثقة', description: 'بتساعد السيدات يستعيدوا قوتهم وصوتهم في الحياة الشخصية والمهنية.' },\n      { title: 'الكوتشينج المهني', description: 'بترشد الأفراد في تحديد أهدافهم المهنية وتوجيه حياتهم العملية ناحية شغفهم.' },\n      { title: 'الصحة النفسية', description: 'بتدعم عملاءها في إدارة التوتر والقلق وتعدي المراحل الصعبة في حياتهم بأساليب مخصصة للمرونة النفسية.' },\n      { title: 'تطوير القيادة', description: 'بتمكن السيدات والقادة الجدد إنهم يمسكوا مناصب قيادية بشجاعة وثقة.' },\n    ];\n\n    const questions = [\n      {\n        title: 'مرحباً! لنخصص تجربتك.',\n        text: 'ما هي أهدافك الرئيسية في الحياة حالياً؟',\n        type: 'checkbox',\n        options: [\n          'تطوير مهني',\n          'تحسين الصحة النفسية',\n          'بناء الثقة',\n          'تطوير القيادة',\n          'إدارة الوقت',\n          'تعلم مهارات جديدة',\n        ],\n      },\n      {\n        title: 'رائع!',\n        text: 'ما هو أكبر تحدي تواجهه الآن؟',\n        type: 'radio',\n        options: ['قلة التركيز', 'القلق', 'نقص الحافز', 'تحديد الأهداف', 'توازن الحياة والعمل'],\n      },\n      {\n        title: 'شكراً لمشاركتك.',\n        text: 'من فضلك أدخل بريدك الإلكتروني لنتمكن من التواصل معك.',\n        type: 'input',\n        inputType: 'email',\n        placeholder: 'ادخل بريدك الإلكتروني',\n      },\n      {\n        title: 'متى تفضل أن نتواصل معك؟',\n        type: 'date',\n      },\n    ];\n\n    const currentQuestion = computed(() => questions[currentStep.value]);\n    const isLastStep = computed(() => currentStep.value === questions.length - 1);\n\n    const getQuestionComponent = computed(() => {\n      switch (currentQuestion.value.type) {\n        case 'checkbox': return CheckboxQuestion;\n        case 'radio': return RadioQuestion;\n        case 'input': return InputQuestion;\n        case 'date': return DateQuestion;\n        default: return null;\n      }\n    });\n\n    const isStepValid = computed(() => {\n      const answer = answers.value[currentStep.value];\n      if (!answer) return false;\n      if (currentQuestion.value.type === 'checkbox') return answer.length > 0;\n      if (currentQuestion.value.type === 'input' && currentQuestion.value.inputType === 'email') {\n        return /\\S+@\\S+\\.\\S+/.test(answer);\n      }\n      return true;\n    });\n\n    watch(currentStep, (newStep) => {\n      if (answers.value[newStep] === undefined) {\n        answers.value[newStep] = currentQuestion.value.type === 'checkbox' ? [] : '';\n      }\n    });\n\n    const closeModal = () => {\n      emit('close');\n      showQuestionnaire.value = false;\n      currentStep.value = 0;\n      answers.value = [];\n    };\n\n    const openQuestionnaire = () => {\n      showQuestionnaire.value = true;\n    };\n\n    const nextStep = () => {\n      if (currentStep.value < questions.length - 1) {\n        currentStep.value++;\n      }\n    };\n\n    const prevStep = () => {\n      if (currentStep.value > 0) {\n        currentStep.value--;\n      }\n    };\n\n    const submit = () => {\n      emit('submit', { answers: answers.value, email: answers.value[2] });\n      closeModal();\n    };\n\n    return {\n      showQuestionnaire,\n      currentStep,\n      answers,\n      specialties,\n      currentQuestion,\n      isLastStep,\n      getQuestionComponent,\n      isStepValid,\n      closeModal,\n      openQuestionnaire,\n      nextStep,\n      prevStep,\n      submit,\n    };\n  },\n};\n</script>\n\n<style scoped>\n.modal-container {\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  height: 100%;\n  background: rgba(30, 30, 30, 0.9);\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  z-index: 1000;\n}\n\n.modal-content {\n  background: #fff;\n  width: 90%;\n  max-width: 800px;\n  padding: 2rem 3rem;\n  border-radius: 20px;\n  position: relative;\n  animation: fadeInUp 0.5s ease-in-out;\n  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);\n  max-height: 90vh;\n  overflow-y: auto;\n}\n\n.close-button {\n  position: absolute;\n  top: 1rem;\n  right: 1rem;\n  background: none;\n  border: none;\n  font-size: 2rem;\n  color: #999;\n  cursor: pointer;\n  z-index: 1100;\n  transition: color 0.3s ease;\n}\n\n.close-button:hover {\n  color: #333;\n}\n\n.modal-title {\n  font-size: 2.5rem;\n  margin-bottom: 1rem;\n  font-weight: 700;\n  color: #333;\n  text-align: center;\n}\n\n.modal-text {\n  font-size: 1.2rem;\n  line-height: 1.8;\n  color: #555;\n  margin-bottom: 1.5rem;\n  text-align: center;\n}\n\n.modal-list {\n  list-style: none;\n  padding: 0;\n  margin-bottom: 2rem;\n}\n\n.modal-list li {\n  font-size: 1.2rem;\n  line-height: 1.8;\n  margin-bottom: 1rem;\n  position: relative;\n  padding-right: 1.5rem;\n  color: #333;\n}\n\n.modal-list li::before {\n  content: '✔';\n  position: absolute;\n  right: 0;\n  color: #ff6f61;\n  font-size: 1.5rem;\n}\n\n.modal-button {\n  background-color: #ff6f61;\n  color: #fff;\n  padding: 0.8rem 2rem;\n  border-radius: 30px;\n  font-size: 1rem;\n  transition: background-color 0.3s ease;\n  text-decoration: none;\n  display: block;\n  cursor: pointer;\n  margin: 0 auto;\n  border: none;\n}\n\n.modal-button:hover {\n  background-color: #e65b50;\n}\n\n.navigation-buttons {\n  display: flex;\n  justify-content: space-between;\n  margin-top: 1.5rem;\n}\n\n.nav-button {\n  background-color: #ff6f61;\n  color: #fff;\n  padding: 0.7rem 1.5rem;\n  border: none;\n  border-radius: 30px;\n  font-size: 1rem;\n  cursor: pointer;\n  transition: background-color 0.3s ease;\n}\n\n.nav-button:hover {\n  background-color: #e65b50;\n}\n\n.nav-button:disabled {\n  background-color: #ccc;\n  cursor: not-allowed;\n}\n\n@keyframes fadeInUp {\n  from {\n    opacity: 0;\n    transform: translate3d(0, 20px, 0);\n  }\n  to {\n    opacity: 1;\n    transform: translateZ(0);\n  }\n}\n\n.fade-enter-active,\n.fade-leave-active {\n  transition: opacity 0.5s ease;\n}\n\n.fade-enter-from,\n.fade-leave-to {\n  opacity: 0;\n}\n\n@media (max-width: 768px) {\n  .modal-content {\n    padding: 1rem;\n    max-width: 100%;\n    border-radius: 10px;\n  }\n\n  .modal-title {\n    font-size: 2rem;\n  }\n\n  .modal-text,\n  .modal-list li {\n    font-size: 1rem;\n  }\n\n  .nav-button {\n    font-size: 0.9rem;\n    padding: 0.6rem 1.2rem;\n  }\n\n  .close-button {\n    font-size: 1.5rem;\n    padding: 8px;\n  }\n}\n\n@media (max-width: 480px) {\n  .modal-title {\n    font-size: 1.8rem;\n  }\n\n  .modal-text,\n  .modal-list li {\n    font-size: 0.9rem;\n  }\n\n  .nav-button {\n    font-size: 0.8rem;\n    padding: 0.5rem 1rem;\n  }\n\n  .close-button {\n    font-size: 1.3rem;\n    padding: 6px;\n  }\n}\n</style>"],"mappings":"AAuDA,SAAAA,GAAA,EAAAC,QAAA,EAAAC,KAAA;AACA,OAAAC,gBAAA;AACA,OAAAC,aAAA;AACA,OAAAC,aAAA;AACA,OAAAC,YAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IACAL,gBAAA;IACAC,aAAA;IACAC,aAAA;IACAC;EACA;EACAG,KAAA;IACAC,SAAA;MACAC,IAAA,EAAAC,OAAA;MACAC,OAAA;IACA;EACA;EACAC,KAAA;EACAC,MAAAN,KAAA;IAAAO;EAAA;IACA,MAAAC,iBAAA,GAAAjB,GAAA;IACA,MAAAkB,WAAA,GAAAlB,GAAA;IACA,MAAAmB,OAAA,GAAAnB,GAAA;IAEA,MAAAoB,WAAA,IACA;MAAAC,KAAA;MAAAC,WAAA;IAAA,GACA;MAAAD,KAAA;MAAAC,WAAA;IAAA,GACA;MAAAD,KAAA;MAAAC,WAAA;IAAA,GACA;MAAAD,KAAA;MAAAC,WAAA;IAAA,EACA;IAEA,MAAAC,SAAA,IACA;MACAF,KAAA;MACAG,IAAA;MACAb,IAAA;MACAc,OAAA,GACA,cACA,uBACA,cACA,iBACA,eACA;IAEA,GACA;MACAJ,KAAA;MACAG,IAAA;MACAb,IAAA;MACAc,OAAA;IACA,GACA;MACAJ,KAAA;MACAG,IAAA;MACAb,IAAA;MACAe,SAAA;MACAC,WAAA;IACA,GACA;MACAN,KAAA;MACAV,IAAA;IACA,EACA;IAEA,MAAAiB,eAAA,GAAA3B,QAAA,OAAAsB,SAAA,CAAAL,WAAA,CAAAW,KAAA;IACA,MAAAC,UAAA,GAAA7B,QAAA,OAAAiB,WAAA,CAAAW,KAAA,KAAAN,SAAA,CAAAQ,MAAA;IAEA,MAAAC,oBAAA,GAAA/B,QAAA;MACA,QAAA2B,eAAA,CAAAC,KAAA,CAAAlB,IAAA;QACA;UAAA,OAAAR,gBAAA;QACA;UAAA,OAAAC,aAAA;QACA;UAAA,OAAAC,aAAA;QACA;UAAA,OAAAC,YAAA;QACA;UAAA;MACA;IACA;IAEA,MAAA2B,WAAA,GAAAhC,QAAA;MACA,MAAAiC,MAAA,GAAAf,OAAA,CAAAU,KAAA,CAAAX,WAAA,CAAAW,KAAA;MACA,KAAAK,MAAA;MACA,IAAAN,eAAA,CAAAC,KAAA,CAAAlB,IAAA,wBAAAuB,MAAA,CAAAH,MAAA;MACA,IAAAH,eAAA,CAAAC,KAAA,CAAAlB,IAAA,gBAAAiB,eAAA,CAAAC,KAAA,CAAAH,SAAA;QACA,sBAAAS,IAAA,CAAAD,MAAA;MACA;MACA;IACA;IAEAhC,KAAA,CAAAgB,WAAA,EAAAkB,OAAA;MACA,IAAAjB,OAAA,CAAAU,KAAA,CAAAO,OAAA,MAAAC,SA